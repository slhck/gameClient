<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:text="Welcome to the AMT Game Client!" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp"></TextView>
    <Button android:text="Start!" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:id="@+id/button_start" android:padding="30dp"></Button>
    <TextView android:text="Server Connection:" android:id="@+id/textServerLabel" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp"></TextView>    
</LinearLayout>
